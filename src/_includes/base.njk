<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE-edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{{ title }}</title>
        <link rel="stylesheet" href="{{ '/css/style.css' | url }}">
    </head>
    <body>
        <div class="wrapper">
        <header>
            <nav>
                <div>
                    {% for item in collections.all | sort(attribute='data.nav.order') %}
                    {% if item.data.nav %}
                    <a href="{{ item.url }}">{{ item.data.nav.label }}</a>
                    {% endif %}
                    {% endfor %}
                </div>
            </nav>
            <h1>{{ title }}</h1>
        </header>
        <main>
            <article>
                {{ content | safe }}
            </article>
        </main>
        <footer>
            <p>&copy;2025 Andr√© Brasil</p>
        </footer>
        </div>
    </body>
</html>
